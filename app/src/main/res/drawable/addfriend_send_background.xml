<!-- res/drawable/rounded_image_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gölge efekti için arka plan katmanı -->
    <item android:bottom="4dp" android:right="4dp">
        <shape>
            <solid android:color="#80000000" /> <!-- Yarı şeffaf siyah gölge -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- ImageView'in ana arka planı -->
    <item>
        <shape>
            <solid android:color="#2C2C2C"/> <!-- İç rengi beyaz -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
