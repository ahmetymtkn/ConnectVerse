<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".SignUpPage">

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="334dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#2C2C2C"
        android:textIsSelectable="false"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/addphoto"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_background"
        android:clipToOutline="true"
        android:onClick="addimagemethod"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountText"
        app:srcCompat="@drawable/custom_button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/addimagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="ADD IMAGE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/addphoto"
        app:layout_constraintEnd_toEndOf="@+id/addphoto"
        app:layout_constraintStart_toStartOf="@+id/addphoto"
        app:layout_constraintTop_toTopOf="@+id/addphoto" />

    <TextView
        android:id="@+id/textViewname"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="•Name"
        android:textColor="#CBC1C1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/signupname"
        app:layout_constraintTop_toBottomOf="@+id/addphoto"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="15"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter Nick Name"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewname"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewemail"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="•E-mail"
        android:textColor="#CBC1C1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/signupemail"
        app:layout_constraintTop_toBottomOf="@+id/signupname"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signupemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="15"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewemail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewpassword"
        android:layout_width="121dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="•Password"
        android:textColor="#CBC1C1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/signuppassword"
        app:layout_constraintTop_toBottomOf="@+id/signupemail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signuppassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="15"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter Password"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewpassword"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewconfirmpassword"
        android:layout_width="169dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="•Confirm Password"
        android:textColor="#CBC1C1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/signupconfirmpassword"
        app:layout_constraintTop_toBottomOf="@+id/signuppassword"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signupconfirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="15"
        android:fontFamily="@font/roboto_medium"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewconfirmpassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C2C2C"
        android:fontFamily="@font/inder"
        android:onClick="signupMethod"
        android:text="SING UP"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupconfirmpassword"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/changepageSigntext"
        android:layout_width="187dp"
        android:layout_height="39dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/inter"
        android:onClick="sendloginpage"
        android:text="Do You Have An Account? Lets Login!"
        android:textAlignment="center"
        android:textColor="#D4CECE"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>