<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/user_photo_background"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/invitationusernimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:background="@drawable/user_photo_cut"
            android:clipToOutline="true"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/invitationusername"
        android:layout_width="148dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Yumurtkan"
        android:textColor="#D9D9D9"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout3"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Çarpı işareti için ImageView -->

    <ImageView
        android:id="@+id/acceptinvitation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="76dp"
        android:background="@drawable/rounded_image_background_dark"
        android:elevation="8dp"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invitationusername"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/refuseinvitation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_image_background_dark"
        android:elevation="8dp"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/ic_cross"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acceptinvitation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>